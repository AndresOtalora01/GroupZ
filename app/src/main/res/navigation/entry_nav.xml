<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/entry_nav"
    app:startDestination="@id/login">

    <fragment
        android:id="@+id/login"
        android:name="cat.copernic.groupz.ui.activities.home.fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/register" />
        <action
            android:id="@+id/action_login_to_forgotten_password"
            app:destination="@id/forgotten_password" />
    </fragment>
    <fragment
        android:id="@+id/register"
        android:name="cat.copernic.groupz.ui.activities.home.fragments.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/login" />
    </fragment>
    <fragment
        android:id="@+id/logOutFragment"
        android:name="cat.copernic.groupz.ui.activities.home.fragments.LogOutFragment"
        android:label="fragment_log_out"
        tools:layout="@layout/fragment_log_out" >
        <action
            android:id="@+id/action_logOutFragment_to_login"
            app:destination="@id/login" />
        <action
            android:id="@+id/action_logOutFragment_to_confirmar_Eliminar"
            app:destination="@id/confirmar_Eliminar" />
    </fragment>
    <fragment
        android:id="@+id/confirmar_Eliminar"
        android:name="cat.copernic.groupz.Confirmar_Eliminar"
        android:label="fragment_confirmar__eliminar"
        tools:layout="@layout/fragment_delete_confirmation" >
        <action
            android:id="@+id/action_confirmar_Eliminar_to_login"
            app:destination="@id/login" />
    </fragment>
    <fragment
        android:id="@+id/forgotten_password"
        android:name="cat.copernic.groupz.forgotten_password"
        android:label="fragment_forgotten_password"
        tools:layout="@layout/fragment_forgotten_password" />
</navigation>